<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment"
    android:layout_margin="16dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="YOUR INSTALLATION"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#194867"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/favorite_selected"/>

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION NAME"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/location_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARMY"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="3dp"
            android:textColor="#92A2AD"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/location_name"/>

        <TextView
            android:id="@+id/address_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="somehwere on the troag"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_below="@id/location_type"/>

        <TextView
            android:id="@+id/address_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City, State ZIP"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_below="@id/address_1"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:textColor="#194867"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/address_2"/>
        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEBSITE"
            android:drawableLeft="@drawable/ic_website"
            android:drawablePadding="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:textColor="#194867"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/email"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="800-555-1212"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:textColor="#194867"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/website"/>



    </RelativeLayout>
    </LinearLayout>
</FrameLayout>