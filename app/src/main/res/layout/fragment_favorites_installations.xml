<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment"
    android:layout_margin="16dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="88dp"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#194867"
            android:fontFamily="@font/worksans_bold"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:text="YOUR INSTALLATION"
            android:textColor="@color/white"
            android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/favorite_selected"
            android:contentDescription="favorites" />

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/worksans_bold"
            android:text="LOCATION NAME"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_name"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/worksans_regular"
            android:text="ARMY"
            android:textColor="#92A2AD"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_type"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/worksans_regular"
            android:text="somehwere on the troag"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_1"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/worksans_regular"
            android:text="City, State ZIP"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_2"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:fontFamily="@font/worksans_bold"
            android:text="EMAIL"
            android:textColor="#194867"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_website"
            android:drawablePadding="10dp"
            android:fontFamily="@font/worksans_bold"
            android:text="WEBSITE"
            android:textColor="#194867"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/website"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:fontFamily="@font/worksans_bold"
            android:text="800-555-1212"
            android:textColor="#194867"
            android:textSize="12sp"
            android:textStyle="bold" />



    </RelativeLayout>
    </LinearLayout>
</FrameLayout>