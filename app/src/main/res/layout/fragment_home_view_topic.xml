<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF4F7"
    android:orientation="vertical"
    tools:context=".kotlin.MVVM.Home.HomeViewTopicFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textHeader"
                    android:layout_width="250dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Showing Results for {{topic}}" />

                <Button
                    android:id="@+id/button_search"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/search" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="17dp"
                    android:layout_below="@id/textHeader"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/milife_focused_ic" />

                <TextView
                    android:id="@+id/millifeHeader"
                    android:layout_width="129dp"
                    android:layout_height="19dp"
                    android:layout_below="@id/textHeader"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="MILLIFE GUIDES"
                    android:textColor="#194867" />

                <ListView
                    android:id="@+id/listGuides"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_below="@id/millifeHeader"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:clipToPadding="false"
                    android:divider="@android:color/transparent"
                    android:paddingTop="@dimen/cardview_default_elevation"
                    android:paddingBottom="@dimen/cardview_default_elevation"
                    android:nestedScrollingEnabled="true"/>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="17dp"
                    android:layout_below="@id/listGuides"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/benefits_focused_ic" />

                <TextView
                    android:id="@+id/guidesHeader"
                    android:layout_width="129dp"
                    android:layout_height="19dp"
                    android:layout_below="@id/listGuides"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="BENEFITS"
                    android:textColor="#194867" />

                <GridView
                    android:id="@+id/gridBenefits"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_below="@id/guidesHeader"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:columnWidth="156dp"
                    android:horizontalSpacing="16dp"
                    android:numColumns="2"
                    android:verticalSpacing="16dp"
                    android:nestedScrollingEnabled="true"/>


                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="17dp"
                    android:layout_below="@id/gridBenefits"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/connect_focused_ic" />

                <TextView
                    android:id="@+id/connectHeader"
                    android:layout_width="129dp"
                    android:layout_height="19dp"
                    android:layout_below="@id/gridBenefits"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="CONNECT"
                    android:textColor="#194867" />

                <TextView
                    android:id="@+id/expertsText"
                    android:layout_width="200dp"
                    android:layout_height="42dp"

                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/connectHeader"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:text="Our experts are available 24/7 to help\nsupport your MilLife."
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#4A4A4A" />



                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rectangle_34"
                    android:layout_below="@id/expertsText">

                    <TextView
                        android:id="@+id/contactText"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="32dp"
                        android:gravity="center"
                        android:text="Speak with Military\n OneSource Consultant"
                        android:textAlignment="center"
                        android:textColor="#194867"
                        android:textSize="20sp"
                        />

                    <Button
                        android:id="@+id/button_call"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="179dp"
                        android:layout_height="46dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_redbutton_with_phone"
                        android:layout_below="@id/contactText"
                        />
                </RelativeLayout>


                <Button
                    android:id="@+id/button_onesource"
                    android:layout_centerHorizontal="true"
                    android:layout_width="249dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:textColor="#194867"
                    android:textAllCaps="false"
                    android:text="@string/onsesource_link"
                    android:layout_below="@id/layout1"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#EFF4F7"/>

        </LinearLayout>

    </ScrollView>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:baselineAligned="false" />-->
</LinearLayout>