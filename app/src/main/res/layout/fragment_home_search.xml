<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".kotlin.MVVM.UserSettings.UserSetttingsSearchFragment">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <ProgressBar
        android:id="@+id/pbLoading"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#12334A">


            <Button
                android:id="@+id/button_back"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/keyboard_backspace"
                android:contentDescription="back" />


            <EditText
                android:id="@+id/search_text"
                android:layout_width="269dp"
                android:layout_height="41dp"
                android:importantForAccessibility="yes"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/search_w_icon"
                android:imeOptions="actionDone"
                android:inputType="text"
                />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#EFF4F7">

            <TextView
                android:id="@+id/sectionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="45dp"
                android:textColor="@color/black"
                android:text="SUGGESTED TOPICS"
                />

        </RelativeLayout>

        <ListView
            android:id="@+id/searchList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"

            />

    </LinearLayout>


</FrameLayout>