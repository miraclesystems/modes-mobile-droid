<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    tools:context=".kotlin.MVVM.UserSettings.UserSettingsDescriptionFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        android:layout_height="match_parent">

        <!--contentent goes here-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelDescribesYou"
                android:layout_width="200dip"
                android:layout_height="100dp"
                android:text="What best describes you?"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"
                android:textSize="12pt"

                />

            <Button
                android:id="@+id/button_serviceMember"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:background="@drawable/usersettingsdescriptionbuttonbackground"
                android:text="I am a Service Member"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/white"
                android:layout_below="@id/labelDescribesYou"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/button_spouse"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/usersettingsdescriptionbuttonbackground"
                android:text="I am a Military Spouse"

                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_below="@id/button_serviceMember"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/button_family"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/usersettingsdescriptionbuttonbackground"
                android:text="I am a Family Member"
                android:textColor="@color/white"
                android:layout_below="@id/button_spouse"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/button_page1"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/usersettings_selected_round_button"
                android:text="1"
                android:textColor="@color/white"
                android:layout_below="@id/button_family"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_page2"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/usersettings_unselected_round_button"
                android:text="2"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button_family"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_page3"
                android:layout_height="40dp"
                android:layout_width="40dp"

                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/usersettings_unselected_round_button"
                android:text="3"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_below="@id/button_family"
                android:textAllCaps="false" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>