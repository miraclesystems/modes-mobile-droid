<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment"
    android:layout_margin="16dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="14dp"
                android:paddingLeft="16dp"
                android:text="YOUR INSTALLATION"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="#194867"/>

            <TextView
                android:id="@+id/no_installation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No installation selected"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:textColor="#194867"
                android:textSize="14sp"
                android:layout_below="@id/header"/>


                <Button
                    android:layout_width="156dp"
                    android:layout_height="36dp"
                    android:layout_below="@id/no_installation"
                    android:background="@drawable/ic_button_clear"
                    android:layout_marginBottom="32dp"
                    android:text="Add an installation"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#194867"
                    />


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>